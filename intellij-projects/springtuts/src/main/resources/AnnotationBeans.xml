<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>

    <!-- Definition for student bean -->
    <bean id="student" class="com.jpaisley.annotation.required.Student">
        <property name="name"  value="Zara" />

        <!-- try without passing age and check the result -->
        <property name="age"  value="11"/>
    </bean>

    <!-- Definition for textEditor bean without constructor-arg  -->
    <bean id="textEditor" class="com.jpaisley.annotation.autowired.TextEditor">
    </bean>

    <!-- Definition for spellChecker bean -->
    <bean id="spellChecker" class="com.jpaisley.annotation.autowired.SpellChecker">
    </bean>

    <!-- Definition for profile bean -->
    <bean id="profile" class="com.jpaisley.annotation.qualifier.Profile">
    </bean>

    <!-- Definition for student1 bean -->
    <bean id="student1" class="com.jpaisley.annotation.qualifier.Student">
        <property name="name"  value="Zara" />
        <property name="age"  value="11"/>
    </bean>

    <!-- Definition for student2 bean -->
    <bean id="student2" class="com.jpaisley.annotation.qualifier.Student">
        <property name="name"  value="Nuha" />
        <property name="age"  value="2"/>
    </bean>

    <bean id="classA" class="com.jpaisley.annotation.resource.ClassA">
    </bean>


</beans>